<div class="container">
  <h5>Quantidade atual:  <strong><%= @product.amount %></strong></h5>
  <%= form_with url: change_amount_do_product_url, method: :post do |form| %>
      <div class="form-group mb-3">
        <%= form.label "Quantidade a ser #{params[:operation] == 'add' ? 'adicionada' : 'removida'}?" %>
        <%= form.number_field :qtd, class: "form-control", autofocus: true%>
      </div>   
    <%= form.hidden_field :operation, value: params[:operation]%>
    <%= form.submit class: "btn btn-dark" %>
  <% end %>
</div>